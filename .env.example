# AI Penetration Testing Brain - Environment Configuration

# Application
PROJECT_NAME="AI Penetration Testing Brain"
VERSION="3.0.0"
ENVIRONMENT="development"

# Security
SECRET_KEY="your-secret-key-here-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL="postgresql+asyncpg://postgres:postgres@localhost:5432/pentest_brain"

# Redis
REDIS_URL="redis://localhost:6379/0"

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:8000"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
EMAILS_FROM_EMAIL="noreply@pentestbrain.ai"
EMAILS_FROM_NAME="AI Pentest Brain"

# Stripe
STRIPE_API_KEY="sk_test_your_stripe_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Rate Limiting
RATE_LIMIT_FREE_TIER=100
RATE_LIMIT_PREMIUM_TIER=10000

# Scan Limits
SCAN_LIMIT_FREE_TIER=10

# Celery
CELERY_BROKER_URL="redis://localhost:6379/0"
CELERY_RESULT_BACKEND="redis://localhost:6379/0"

# CLI Tool Path (relative to backend directory)
CLI_TOOL_PATH="../ai_pentest_brain_complete.py"
